<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ecf2f2"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="8dp"
        android:text="查询您的套餐余量"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_mifi_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:hint="请输入设备ID"
            android:inputType="number"
            android:paddingBottom="12dp"
            android:paddingLeft="15dp"
            android:paddingTop="12dp" />

        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="24dp"
            android:background="@mipmap/delete"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_show_mifi"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="#f3f3f3">

        <com.dragon.wtudragondesign.view.CircleWaveView
            android:id="@+id/circle_wave"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            app:innerRadius="80dp"
            app:outCircleColor="#28a2fb"
            app:outCircleWidth="1dp"
            app:textColor="#f4a666"
            app:textSize="24sp"
            app:waveBackColor="#f1f1f1"
            app:waveBackColor2="#4cb1fc"
            app:waveColor="#28a2fb"
            app:waveColor2="#4cb1fc"
            app:waveHight="4dp"
            app:waveHight2="10dp"
            app:waveWidth="100dp"
            app:waveWidth2="100dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="50dp"
            android:text="当前剩余有效天数"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_des_mifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:text="您的MIFI流量将于2018-08-08到期"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_query_now"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/rectangle_shape"
        android:text="立即查询"
        android:textColor="#ffffff"
        android:textSize="16sp" />

</LinearLayout>