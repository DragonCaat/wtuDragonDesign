<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@mipmap/nav_bg">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/cv_photo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/photo" />
        </RelativeLayout>


        <TextView
            android:id="@+id/tv_my_friends"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="left"
            android:background="@drawable/button_my_selector"
            android:drawablePadding="12dp"
            android:drawableStart="@mipmap/friend"
            android:gravity="left|center"
            android:paddingBottom="6dp"
            android:paddingStart="16dp"
            android:paddingTop="6dp"
            android:text="我的好友"
            android:textColor="@color/black"
            android:textSize="14sp"
            tools:ignore="RtlHardcoded,RtlSymmetry" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_bg" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_add_friend"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:background="@drawable/button_my_selector"
            android:drawablePadding="12dp"
            android:drawableStart="@mipmap/addfriends"
            android:gravity="left|center"
            android:paddingBottom="6dp"
            android:paddingStart="16dp"
            android:paddingTop="6dp"
            android:text="添加好友"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_my_publish_reward"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_my_selector"
            android:drawablePadding="12dp"
            android:drawableStart="@mipmap/reward"
            android:gravity="left|center"
            android:paddingBottom="6dp"
            android:paddingStart="16dp"
            android:paddingTop="6dp"
            android:text="我发布的悬赏"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_bg" />

        <TextView
            android:id="@+id/tv_my_receive_reward"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:background="@drawable/button_my_selector"
            android:drawablePadding="12dp"
            android:drawableStart="@mipmap/icon_profit"
            android:gravity="left|center"
            android:paddingBottom="6dp"
            android:paddingStart="16dp"
            android:paddingTop="6dp"
            android:text="我接受的悬赏"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_bg" />

        <TextView
            android:id="@+id/tv_about_our"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:background="@drawable/button_my_selector"
            android:drawablePadding="12dp"
            android:drawableStart="@mipmap/icon_cooperation"
            android:gravity="left|center"
            android:paddingBottom="6dp"
            android:paddingStart="16dp"
            android:paddingTop="6dp"
            android:text="商务合作"
            android:textColor="@color/black"
            android:textSize="14sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_bg" />

        <TextView
            android:id="@+id/tv_recharge_vip"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:background="@drawable/button_my_selector"
            android:drawablePadding="12dp"
            android:drawableStart="@mipmap/vip_icon"
            android:gravity="left|center"
            android:paddingBottom="6dp"
            android:paddingStart="16dp"
            android:paddingTop="6dp"
            android:text="会员充值"
            android:textColor="@color/black"
            android:textSize="14sp" />
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/tv_setting"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:background="@drawable/button_my_selector"
            android:drawablePadding="12dp"
            android:drawableStart="@mipmap/setting"
            android:gravity="left|center"
            android:paddingBottom="6dp"
            android:paddingStart="16dp"
            android:paddingTop="6dp"
            android:text="设置"
            android:textColor="@color/black"
            android:textSize="14sp" />


        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/btn_login_out"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:background="@drawable/button_my_selector"
            android:drawablePadding="12dp"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            android:text="退出登录"
            android:textColor="@color/black"
            android:textSize="14sp" />

    </LinearLayout>

</ScrollView>
